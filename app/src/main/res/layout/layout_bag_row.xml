<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d5dp"
    android:layout_marginBottom="@dimen/d8dp"
    android:elevation="@dimen/d5dp"
    app:cardCornerRadius="@dimen/d5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/d5dp">

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvCustomer"
            android:layout_alignTop="@id/tvCustomer"
            android:layout_marginStart="@dimen/d8dp"
            android:background="@drawable/eclipse_drawable"
            android:textColor="@color/white"
            android:textSize="@dimen/s16sp" />

        <TextView
            android:id="@+id/tvTagId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCount"
            android:layout_marginTop="@dimen/d8dp"
            android:background="@drawable/eclipse_drawable"
            android:textColor="@color/white"
            android:textSize="@dimen/s16sp" />

        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTagId"
            android:layout_marginTop="@dimen/d8dp"
            android:background="@drawable/eclipse_drawable"
            android:textColor="@color/white"
            android:textSize="@dimen/s16sp" />

        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eclipse_drawable"
            android:textColor="@color/white"
            android:textSize="@dimen/s16sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
